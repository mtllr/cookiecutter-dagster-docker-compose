	"name": "{{cookiecutter.project_slug}}_dev",
	"dockerComposeFile": [
		"../docker-compose.local.yml"
	],
	"init": true,
	"service": "{{cookiecutter.project_slug}}_local_user_code",
	"workspaceFolder": "/opt/dagster/app",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-python.isort",
				"ms-python.black-formatter"
			]
		}
	}
